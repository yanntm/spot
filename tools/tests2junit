echo '<?xml version="1.0" encoding="UTF-8"?>'
echo '<testsuites>'
echo '<testsuite name="tests">'
find . -name '*.trs' -print |
while read filename; do
    base=${filename%.trs}
    while read header rest; do
        case $header in
            :global-test-result:) result=$rest;;
            *);;
        esac
    done < $filename
    case $result in
        PASS|XFAIL) tag="system-out";;
        *) tag="error";;
    esac
    tm=`stat -c '%Y-%W' "$base.log" | bc`
    echo -n "<testcase name=\"$base\" time=\"$tm\"><$tag><![CDATA["
    cat "$base.log"
    echo "]]></$tag>"
done
echo '</testsuite>'
echo '</testsuites>'
